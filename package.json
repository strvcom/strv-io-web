{
  "name": "strv-io",
  "version": "0.0.1",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strvcom/strv-io-web.git"
  },
  "author": "STRV",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strvcom/strv-io-web/issues"
  },
  "homepage": "https://github.com/strvcom/strv-io-web#readme",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export && mv out/404/index.html out/404.html && rm -rf out/404",
    "deploy": "npm run export && firebase deploy",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "prettier": "prettier --write 'app/**/*.js'",
    "lint:css": "stylelint './app/**/*.js' --ignore-path .gitignore --ignore-pattern",
    "lint:staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "next": "^7.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "scrollreveal": "^3.4.0",
    "styled-components": "^3.4.10"
  },
  "devDependencies": {
    "@strv/eslint-config-javascript": "^8.3.0",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.8.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.0"
  },
  "moduleDirectories": [
    "node_modules",
    "app"
  ]
}
